{
  "name": "@akki907/my-awesome-library",
  "version": "1.0.3",
  "description": "A simple TypeScript npm library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint",
      "pre-push": "npm run build"
    }
  },
  "scripts": {
    "build": "tsc",
    "bump": "npm version patch",
    "prepublishOnly": "npm run build",
    "publish-auto": "npm run bump && npm publish --access public",
    "version:patch": "ts-node scripts/version-management.ts patch",
    "version:minor": "ts-node scripts/version-management.ts minor",
    "version:major": "ts-node scripts/version-management.ts major",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "format": "prettier --write .",
    "test": "jest",
    "prepare": "npm run build",
    "test:watch": "jest --watch",
    "publish": "npm publish --access public"
  },
  "lint-staged": {
  "*.ts": [
    "prettier --write",
    "git add"
  ],
  "*.js": [
    "prettier --write",
    "git add"
  ]
},
  "keywords": [
    "utility",
    "library"
  ],
  "author": "Akki",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "husky": "^9.1.7",
    "jest": "^29.6.1",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  }
}